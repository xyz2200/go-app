apiVersion: apps/v1
kind: Deployment
metadata:
  name: totem-api
  namespace: totem
  labels:
    app: totem-api
spec:
  replicas: 1
  selector:
    matchLabels:
      app: totem-api
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 0
    type: RollingUpdate
  template:
    metadata:
      labels:
        app: totem-api
    spec:
      containers:
      - name: totem-api
        image: **LATEST_IMAGE
        imagePullPolicy: Always
        envFrom:
        - configMapRef:
            name: totem-configmap
        env:
          - name: DB_HOST
            valueFrom:
              secretKeyRef:
                name: totem-secret
                key: host
          - name: DB_PORT
            valueFrom:
              secretKeyRef:
                name: totem-secret
                key: port
          - name: DB_USERNAME
            valueFrom:
              secretKeyRef:
                name: totem-secret
                key: username
          - name: DB_PASSWORD
            valueFrom:
              secretKeyRef:
                name: totem-secret
                key: password
        ports:
        - containerPort: 8080
        resources:
          limits:
            cpu: 500m
            memory: 256Mi
          requests:
            cpu: 100m
            memory: 256Mi
        workingDir: /app
      restartPolicy: Always
      volumes:
      - hostPath:
          path: /tmp
          type: Directory
        name: tmpdir